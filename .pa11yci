{
  "defaults": {
    "runners": ["axe", "htmlcs"],
    "standard": "WCAG2AA",
    "timeout": 30000,
    "wait": 1000,
    "chromeLaunchConfig": {
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage",
        "--disable-gpu"
      ],
      "headless": true
    },
    "ignore": [
      "WCAG2AA.Principle1.Guideline1_3.1_3_1.H42.2",
      "WCAG2AA.Principle2.Guideline2_4.2_4_4.H77,H78,H79,H80,H81"
    ],
    "hideElements": "[x-cloak], [x-show]:not(.visible)"
  },
  "urls": [
    {
      "url": "http://localhost:8888/",
      "screenCapture": "./pa11y-screenshots/index.png"
    },
    {
      "url": "http://localhost:8888/watch.html",
      "screenCapture": "./pa11y-screenshots/watch.png",
      "ignore": [
        "video-caption"
      ]
    },
    {
      "url": "http://localhost:8888/category.html",
      "screenCapture": "./pa11y-screenshots/category.png"
    },
    {
      "url": "http://localhost:8888/tag.html",
      "screenCapture": "./pa11y-screenshots/tag.png"
    }
  ]
}
